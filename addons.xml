<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<addons>
<addon id="repository.rleschuk" name="R.Leschuk Kodi Add-ons" version="1.0.1" provider-name="R.Leschuk">
	<extension point="xbmc.addon.repository" name="R.Leschuk Kodi Add-ons">
		<info compressed="false">https://github.com/rleschuk/kodiaddons/raw/master/addons.xml</info>
		<checksum>https://github.com/rleschuk/kodiaddons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/rleschuk/kodiaddons/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from R.Leschuk Add-on Repository</summary>
		<description>Plug-ins for Kodi</description>
		<disclaimer>There are git my add-ons for Kodi</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.module.metadatautils" name="Metadata and Artwork module" version="1.1.0" provider-name="marcelveldt">
    <requires>
        <import addon="xbmc.python" version="2.24.0"/>
        <import addon="script.module.requests" version="2.3.0"/>
        <import addon="script.module.beautifulsoup" version="3.0.8" />
        <import addon="script.module.thetvdb" version="0.0.1" />
        <import addon="script.module.musicbrainz" version="0.0.1" />
        <import addon="script.module.simplecache" version="1.0.0"/>
        <import addon="script.module.arrow" version="0.6.0"/>
    </requires>
    <extension point="xbmc.python.module" library="lib" />
    <extension point="xbmc.addon.metadata">
        <summary>Metadata and artwork from common sources like TMDB, IMDB, TADB and fanart.tv </summary>
        <description>
            The metadata and artwork module for Kodi provides rich metadata, including artwork for
            various metatypes by scraping (and caching) this information from sites like TMDB, musicbrainz and fanart.tv.
        </description>
        <license>Apache 2.0</license>
        <source>https://github.com/marcelveldt/script.module.metadatautils</source>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.service.tvserver" name="TVServer" version="1.0.7" provider-name="R.Leschuk">
    <requires>
        <import addon="xbmc.python" version="2.7"/>
    </requires>
    <extension point="xbmc.service" library="addon.py" start="login" />
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>блаблабла</summary>
        <description>блаблабла блаблабла</description>
        <disclaimer></disclaimer>
        <forum></forum>
        <website></website>
        <source></source>
    </extension>
</addon>
</addons>
