<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<addons>
<addon id="repository.rleschuk" name="R.Leschuk Kodi Add-ons" version="1.0.1" provider-name="R.Leschuk">
	<extension point="xbmc.addon.repository" name="R.Leschuk Kodi Add-ons">
		<info compressed="false">https://github.com/rleschuk/kodiaddons/raw/master/addons.xml</info>
		<checksum>https://github.com/rleschuk/kodiaddons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/rleschuk/kodiaddons/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from R.Leschuk Add-on Repository</summary>
		<description>Plug-ins for Kodi</description>
		<disclaimer>There are git my add-ons for Kodi</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

